        #bottom_tvshow
            .chat_full
                | chat room content here
            .twit_col
                .lead
                    strong.show_title #Scandal
                    //- #hashtags for Scandal
                ul.media-list
                    for tweet in hashtag_status
                        li.media
                            a.pull-left(href='http://twitter.com/'+tweet.user.screen_name)
                                - var image = tweet.user.profile_image_url.replace('_normal', '');
                                img.media-object(src='#{image}', style='width: 32px; height: 32px;')
                            .media-body
                                strong.media-heading #{tweet.user.name}
                                span.text-muted  @#{tweet.user.screen_name}
                                p= tweet.text
